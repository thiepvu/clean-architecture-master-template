# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Clean Architecture API
APP_VERSION=1.0.0

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
SCHEME=http

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mydb
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_DIR=logs
LOG_RETENTION_DAYS=30

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-min-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_METHODS=["GET","POST","PUT","DELETE"]

# =============================================================================
# API
# =============================================================================
DOCS_ENABLED=true
API_V1_PREFIX=/api/v1

# =============================================================================
# CACHE
# Adapter: in_memory | redis
# =============================================================================
CACHE_ADAPTER=in_memory
CACHE_DEFAULT_TTL=3600
CACHE_KEY_PREFIX=cache:

# Redis Cache Settings (if CACHE_ADAPTER=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SSL=false
REDIS_RETRY_ON_TIMEOUT=true
REDIS_MAX_RETRIES=3

# =============================================================================
# JOBS (Background Tasks)
# Adapter: in_memory | redis_celery
# =============================================================================
JOBS_ADAPTER=in_memory
JOBS_DEFAULT_QUEUE=default
JOBS_DEFAULT_MAX_RETRIES=3
JOBS_DEFAULT_TIMEOUT=300

# Celery Settings (if JOBS_ADAPTER=redis_celery)
# Broker (Redis)
CELERY_BROKER_HOST=localhost
CELERY_BROKER_PORT=6379
CELERY_BROKER_DB=1
CELERY_BROKER_USERNAME=
CELERY_BROKER_PASSWORD=
CELERY_BROKER_SSL=false

# Backend (Redis)
CELERY_BACKEND_HOST=localhost
CELERY_BACKEND_PORT=6379
CELERY_BACKEND_DB=2
CELERY_BACKEND_USERNAME=
CELERY_BACKEND_PASSWORD=
CELERY_BACKEND_SSL=false

# Celery Worker
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=270
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_CONCURRENCY=4
CELERY_RESULT_EXPIRES=86400

# =============================================================================
# EVENT BUS
# Adapter: in_memory | rabbitmq | kafka
# =============================================================================
EVENT_BUS_ADAPTER=in_memory

# =============================================================================
# CQRS BUSES (Command/Query Bus)
# Adapter: in_memory | redis | rabbitmq
# =============================================================================
BUS_ADAPTER=in_memory

# =============================================================================
# STORAGE
# Adapter: local | s3
# =============================================================================
STORAGE_ADAPTER=local
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf","doc","docx","xls","xlsx","png","jpg","jpeg","gif","webp","txt","csv","json"]
BLOCKED_EXTENSIONS=["exe","bat","sh","cmd","com","scr","vbs","js","jar"]

# Image Processing
IMAGE_MAX_WIDTH=4096
IMAGE_MAX_HEIGHT=4096
IMAGE_QUALITY=85

# Thumbnail
THUMBNAIL_ENABLED=true
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# Cleanup
TEMP_FILE_LIFETIME_HOURS=24
AUTO_CLEANUP_ENABLED=true

# Local Storage Settings (if STORAGE_ADAPTER=local)
UPLOAD_DIR=uploads

# S3 Storage Settings (if STORAGE_ADAPTER=s3)
S3_BUCKET_NAME=my-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=
S3_PREFIX=uploads

# Common
NOTIFICATION_ADAPTER=in_memory  # or "novu"
NOTIFICATION_DEFAULT_FROM_EMAIL=noreply@example.com
NOTIFICATION_DEFAULT_FROM_NAME=Application
NOTIFICATION_ENABLED_CHANNELS=email,in_app

# In-Memory specific
IN_MEMORY_NOTIFICATION_MAX_QUEUE_SIZE=10000
IN_MEMORY_NOTIFICATION_RETENTION_HOURS=24

# Novu specific
NOVU_API_KEY=your-api-key
NOVU_API_URL=https://api.novu.co  # optional, for self-hosted

