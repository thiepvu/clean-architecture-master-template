# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Clean Architecture API
APP_VERSION=1.0.0

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8001
SCHEME=http

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fastapi_db

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG

# =============================================================================
# CACHE (Redis)
# =============================================================================
CACHE_ADAPTER=redis
CACHE_DEFAULT_TTL=3600
CACHE_KEY_PREFIX=dev:cache:

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# JOBS (Redis Celery)
# =============================================================================
JOBS_ADAPTER=redis_celery
JOBS_DEFAULT_QUEUE=default
JOBS_DEFAULT_MAX_RETRIES=3
JOBS_DEFAULT_TIMEOUT=300

# Celery Broker (Redis DB 1)
CELERY_BROKER_HOST=localhost
CELERY_BROKER_PORT=6379
CELERY_BROKER_DB=1

# Celery Backend (Redis DB 2)
CELERY_BACKEND_HOST=localhost
CELERY_BACKEND_PORT=6379
CELERY_BACKEND_DB=2

# =============================================================================
# EVENT BUS
# =============================================================================
EVENT_BUS_ADAPTER=in_memory

# =============================================================================
# STORAGE
# =============================================================================
STORAGE_ADAPTER=local
UPLOAD_DIR=uploads
